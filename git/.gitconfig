[push]
	default = current
	followTags = true

[commit]
	;gpgsign = true

[diff]
	tool = vimdiff

[alias]
	# http://gggritso.com/human-git-aliases
	br = !git for-each-ref --sort=committerdate refs/heads/ --format='%(HEAD) %(refname:short) | (%(committerdate:relative))' | column -t -s'|'
	branches = branch -a
	tags = tag
	stashes = stash list
	unstage = reset -q HEAD --
	discard = checkout --
	undo = reset --mixed HEAD~
	uncommit = reset --mixed HEAD~
	amend = commit --amend --no-edit
	ammend = commit --amend --no-edit
	aa = commit --amend -a --no-edit
	graph = log --graph -10 --branches --remotes --tags --format=format:'%Cgreen%h %Cresetâ€¢ %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
	precommit = diff --cached --diff-algorithm=minimal -w
	# http://blog.jessitron.com/2015/05/git-handy-alias-to-find-repository-root.html
	home = rev-parse --show-toplevel
	glol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	glol2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''		  %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
	st = status -sbuno
	changed-in = diff-tree --no-commit-id --name-only -r


	# Typos
	psuh = push
	puhs = push
	pul = pull
	pulls = !git stash && git pull && git stash apply
	comit = commit
	commti = commit
	cmomit = commit
	appraise = !/home/hxr/arbeit/go/bin/git-appraise
	chekcout = checkout
	co = checkout
	sttus = status
	mmend = commit --amend
	mend = commit --amend
	pukk = pull
	staash = stash

	fix-ssh = !/home/hxr/.bin/git-fix-ssh

[core]
	whitespace = trailing-space,space-before-tab
	excludesfile = /home/hxr/.gitignore_global

;[transfer]
	;fsckobjects = true
;[fetch]
	;fsckobjects = true
;[receive]
	;fsckObjects = true
[gpg]
	program = gpg2
[pull]
	rebase = true

[merge "merge-changelog"]
	name = GNU-style ChangeLog merge driver
	driver = /usr/bin/git-merge-changelog %O %A %B

[color "diff"]
	meta = bold
	frag = magenta bold
	old = strike reverse
	new = blue dim reverse
[init]
	defaultBranch = main
	templateDir = ~/arbeit/tpl.git
[merge]
	tool = meld
[credential]
	helper = cache
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[diff "ansible-vault"]
	textconv = ansible-vault view
